# Backend Environment Variables
PORT=5000

# MongoDB Atlas Connection
# Get your connection string from MongoDB Atlas dashboard
# Format: mongodb+srv://username:password@cluster.mongodb.net/database_name?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/cipher_sql_studio?retryWrites=true&w=majority

# PostgreSQL Connection (Sandbox Database)
# Fill in your local PostgreSQL credentials
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DATABASE=cipher_sql_studio

# LLM API Key (choose one - either OpenAI OR Google AI)
# Option 1: OpenAI API Key (recommended)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Option 2: Google AI API Key (alternative)
# Get from: https://makersuite.google.com/app/apikey
# GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# JWT Secret (for authentication)
# Generate a random string for production use
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# CORS Origin (optional, defaults to http://localhost:3000)
CORS_ORIGIN=http://localhost:3000

